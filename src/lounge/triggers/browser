. /lounge/triggers/functions.sh

FUNCTION="$1"
declare -A OBJ="$(janosh get /browser/.)"
l_unblank

function open() {
  url="${OBJ[/browser/url]}"
  category="${OBJ[/browser/category]}"
  active="browser"

  if [ "$category" == "image" -o "$category" == "animation" ]; then
    url="http://localhost/cgi-bin/makeImageView?$url"
    active="$category"
  fi

  l_notify "Loading $category: $url" 1

  ( midori "$url" &&  midori -e TabCloseOther ) &

  janosh set "/image/active" false "/browser/active" false "/animation/active" false
  janosh set "/$active/active" true
}

function close() {
  killall midori
  player refresh
  janosh set "/image/active" false "/browser/active" false "/animation/active" false
}

function pageDown() { 
  if killall -0 midori; then 
    xdotool key Page_Down
  fi
}

function pageUp() {
  if killall -0 midori; then 
    xdotool key Page_Up
  fi
}

function scrollDown() {
  if killall -0 midori; then 
    midori -e ScrollDown
  fi
}

function scrollUp() {
  if killall -0 midori; then 
    midori -e ScrollUp
  fi
}

function zoomIn() {
  if killall -0 midori; then
    midori -e ZoomIn
  fi
}
function zoomOut() {
  if killall -0 midori; then
    midori -e ZoomOut
  fi
}

if [ "$(type -t "$FUNCTION")" == "function" ]; then
  $FUNCTION
else
  echo "Unknown command: $FUNCTION" 1>&2
  exit 1
fi

